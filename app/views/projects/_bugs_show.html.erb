<div class="p-4 mb-2 ml-5 mr-5 divs">

      <% if @project.bugs.count == 0 %>
        <strong class='text-danger'>No bugs on this project yet</strong>
      <%end%>
      <% @project.bugs.each do |bug| %>
      <div class="">

        <p>
            <% if bug.dev_id.present? %>
              <span class='float-right'>Assigned to: <%= find_assigned_bug_user(bug) %></span>
            <% end %>
          <h4 class='text-danger'> <%= bug.title%> </h4>

          <%if current_user.manager?%>
            <%= link_to 'Delete Bug',[bug.project, bug], class:'btn btn-danger btn-sm float-right'  ,method: :delete, data: { confirm: 'Are you sure?' }%>
          <%end %>
          <%if current_user.developer?%>

            <%= link_to 'Bug resolved',bug_resolved_bug_path(bug), method: :put ,class:'btn btn-success mr-1 btn-sm float-right'%>
            <% if !bug.dev_id.present? %>
              <%= link_to 'Get Assigned', insert_id_bug_path(bug),  method: :put ,class:'btn btn-warning mr-1 btn-sm float-right'%>
            <%end %>

          <%end %>

        </p>

        <p>
          <b>Deadline: </b>
          <%= bug.deadline%>
        </p>

        <p>
          <b>Status: </b>
          <b class='bg-warning text-dark p-1 rounded'> <%= Bug.statuses.key(bug.bug_status.to_i)%> </b>
        </p>

        <p>
          <b>Type: </b>
          <%= Bug.bugs.key(bug.bug_type.to_i)%>
        </p>
      </div>

      <% if bug.avatar.attached? %>
        <%= image_tag bug.avatar, width: '200px' %>
      <%else%>
        <small class='text-danger'>No Screenshot Attached</small>
      <%end%>

        <hr>
      <% end %>

  </div>
