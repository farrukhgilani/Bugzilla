<div class="shadow p-4 mb-2 ml-5 mr-5 bg-light" style="background-color:rgba(255,255,255,0.4); border-radius: 20px">
    <h3>Bugs / Features</h3>
      <% if @project.bugs.count == 0 %>
        <strong class='text-danger'>No bugs on this project yet</strong>
      <%end%>
      <% @project.bugs.each do |bug| %>
      <div class="">

        <p>
          <strong class='text-danger'> <%= bug.title%> </strong>
          <%if current_user.manager?%>
            <%= link_to 'Delete Bug',[bug.project, bug], class:'btn btn-danger btn-sm float-right'  ,method: :delete, data: { confirm: 'Are you sure?' }%>
          <%end %>
          <%if current_user.developer?%>
            <%= link_to 'Bug resolved',[bug.project, bug], class:'btn btn-success mr-1 btn-sm float-right'  ,method: :delete, data: { confirm: 'Are you sure?' }%>
            <%= link_to 'Get Assigned',[bug.project, bug], class:'btn btn-warning mr-1 btn-sm float-right'  ,method: :delete, data: { confirm: 'Are you sure?' }%>
          <%end %>

        </p>

        <p>
          <b>Deadline: </b>
          <%= bug.deadline%>
        </p>

        <p>
          <b>Status: </b>
          <b class='btn btn-sm btn-warning disabled'> <%= Bug.statuses.key(bug.bug_status.to_i)%> </b>
        </p>

        <p>
          <b>Type: </b>
          <%= Bug.bugs.key(bug.bug_type.to_i)%>
        </p>
      </div>

      <% if bug.avatar.attached? %>
        <%= image_tag bug.avatar, width: '200px' %>
      <%else%>
        <small class='text-danger'>No Screenshot Attached</small>
      <%end%>

        <hr>
      <% end %>

  </div>
