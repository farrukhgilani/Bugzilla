<% if user_signed_in? %>

<div class='ml-5'>
<h3>Projects List</h3>
<%= link_to 'Create new Project', new_project_path, class:"btn btn-outline-primary btn-sm"  %>
</div>

<div class='ml-5 mr-5 mt-3 row d-flex'>
<% @projects.each do |project|%>
    <div class="shadow-lg col-4" style="background-color:rgba(255,255,255,0.4); border-radius: 20px">
      <div class="border rounded m-2 p-3 bg-light card">

        <h3>
          <strong><%= link_to project.name, project_path(project), class:'btn-link card-title' %></strong>
        </h3>

        <p>
          <strong>Description:</strong>
          <%= project.description%>
        </p>

        <p>
          <%= link_to 'Report Bug', project_path(project), class:'btn btn-dark btn-sm float-right' %>
           <%= link_to 'Edit', edit_project_path(project), class:'btn btn-warning btn-sm m-1'%>
        <%# <%= link_to 'Show', project_path(project), class:'btn btn-info m-1'%>
            <%= link_to 'Delete', project_path(project), class:'btn btn-danger btn-sm m-1',method: :delete, data: { confirm: 'Are you sure?' }%>

        </p>

      </div>

      <div class="d-flex flex-column col-2">

       </div>
    </div>
  <%end%>
</div>

<% else %>
<div class="jumbotron container" style="background-color:rgba(255,255,255,0.4); border-radius: 20px">
  <h1 class="display-3">Bugzilla</h1>
  <p class="lead">Sign up to create Account</p>
  <hr class="my-3">
  <%# <%= link_to 'More info', about_path, class:'btn btn-link btn-lg text-dark' %>
  <p class="lead">

  <%= link_to 'Create Your Account', new_user_registration_path, class:"btn btn-outline-primary btn-lg"  %>
  </p>
</div>

<% end %>
