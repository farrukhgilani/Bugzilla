<div class="m-5 w-50 p-4" style="background-color:rgba(255,255,255,0.4); border-radius: 20px">

<h1>Edit Project</h1>
<div class="m-5">

  <%= form_for @project  do |f| %>
    <p>
      <%= f.label :Name %>
      <%= f.text_field :name, autofocus: true , class:'form-control' %>
    </p>

    <p>
      <%= f.label :Description %>
      <%= f.text_area :description, size: "70x5" , class:'form-control' %>
    </p>

    <p>
      <span> Assign project to developer </span>
        <%= f.select( :dev_id, options_from_collection_for_select(User.developers, "id", "name")) %>
    </p>

    <%= f.submit "Update Project", class:'btn btn-primary'%>
    <%= link_to 'Cancel', user_session_path, class:'btn btn-warning'%>
  <% end %>
</div>

</div>
