<div class='container divs p-2'>


  <h3><%= link_to '', projects_path, class:'btn fa fa-arrow-left text-white'%> </h3>
  <h1 class='mt-2'><%= @project.name %></h1>

  <div class="p-2 ">
      <p>
        <strong>Name:</strong>
        <strong><%= @project.name %></strong>
      </p>
        <p>
        <strong>Description:</strong>
        <%= @project.description %>
      </p>
  </div>

  <%if current_user.manager? || current_user.qa?%>
    <button href="#Bar" class="btn btn-default" data-toggle="collapse">Report Bug</button>
    <div id="Bar" class="collapse in">
      <%= render 'bugs_create' %>
    </div>
  <%end %>

  <h3 class='ml-5 mt-1'>Bugs / Features</h3>
  <%= render 'bugs_show' %>

</div>

