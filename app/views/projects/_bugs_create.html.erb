<div class="p-2 ml-5 mr-5 mb-2 divs">
    <div class='w-75 m-auto'>
      <%= form_with(model: [ @project, @project.bugs.build ], local: true) do |form| %>
        <p>
          <span >Title</span>
          <%= form.text_field :title, class:'form-control w-50' %>

          <span>Deadline</span>
          <%= form.date_field :deadline, class:'form-control w-50' %>

          <span>Type</span>
          <%= form.select :bug_type, Bug.bugs , {},{class: 'form-control w-50'}%>

         <span>Status</span>
            <%= form.select :bug_status, Bug.statuses , {},{class: 'form-control w-50'} %>
        </p>

        <p>
         <%# <%= link_to 'Attach a screenshot', @project, class:'btn btn-info btn-sm float-right' %>
          <%= form.file_field :avatar, accept:'image/gif, image/png'%>
          <%= form.submit "Report Bug", class:'btn btn-warning float-right' %>
        </p>
      <% end %>
    </div>

  </div>
