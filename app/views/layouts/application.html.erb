<!DOCTYPE html>
<html>
  <head>
    <title>Bugzilla</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
  <%= render 'layouts/navbar_partial' %>
    <% if notice %>
        <p class='alert alert-success c-alert' id='success-alert'><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class='alert alert-danger c-alert' id='success-alert'><%= alert %></p>
      <% end %>
      <%= yield %>
  </body>
</html>
